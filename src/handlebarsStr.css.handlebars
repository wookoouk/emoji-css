.em {
    height: 1.5em;
    width: 1.5em;

    background: no-repeat center;
    background-size: contain;
    display: inline-block;
    vertical-align: middle;
}

{{#sprites}}
.{{name}}:before {
    display: block;
    background: url({{{escaped_image}}}) {{px.offset_x}} {{px.offset_y}};
    width: 32px;
    height: 32px;
}
{{/sprites}}