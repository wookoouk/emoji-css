.em {
    height: 1.5em;
    width: 1.5em;

    background: no-repeat center;
    background-size: contain;
    display: inline-block;
    vertical-align: middle;
}

{{#sprites}}
.{{name}} {
    display: inline-block;
    background: url({{{escaped_image}}}) {{px.offset_x}} {{px.offset_y}};
    width: {{px.width}};
    height: {{px.height}};
}
{{/sprites}}
